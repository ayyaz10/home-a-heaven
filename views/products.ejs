<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel=icon href="assets/favicon.png">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,600;0,700;1,200&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/product.css">
    <script src="/js/products.js" defer></script>
    <script src="/js/header.js" defer></script>
    <title>Products</title>
</head>
<body>
    <%- include('header') -%>
    <section class="hero-section">
        <h1 class="category-name"><%= currentCategory.category_name %></h1>
    </section>
    <div class="sort-filter-container">
        <div class="sort">
            <!-- <button class="sort-btn">sort</button>
            <button class="filter-btn">filter</button> -->
            <select class="sort-select">
                <option value="sort">Sort</option>
                <option value="alpha-asc">Alphabetically, A-Z</option>
                <option value="alpha-desc">Alphabetically Z-A</option>
                <option value="price-asc">Price, low to high</option>
                <option value="price-desc">Price, high to low</option>
                <option value="date-desc">Date, new to old</option>
                <option value="date-asc">Date, old to new</option>
            </select>
        </div>
        <div class="filter">
            <select class="filter-select">
                <option value="filter">Filter</option>
                <% if (subCategories.length) { %>
                    <% for(let i = 0; i < subCategories.length; i++) { %>
                        <% if (currentCategory.category_id === subCategories[i].cat_id) { %>
                            <option value="<%= subCategories[i].sub_cat_name %>"  <%= subCategories[i].sub_cat_name === session.filterProduct.reqFilterQuery ? 'selected' : ''%>  ><%= subCategories[i].sub_cat_name %></option>
                        <% } %>
                    <% } %>
                <% } %>
            </select>
        </div>
    </div>
    <section class="product-items-section">
         <% for(let i = 0; i < products.length; i++) { %>
        <div class="products">
            <a href="/addInCart" data-product="<%= JSON.stringify(products[i]) %>" class="product-image add-to-cart <%= products[i].price %>"><img src=<%- `/assets/uploads/${products[i].image}` %> alt="product"></a>
            <a href="/addInCart" data-product="<%= JSON.stringify(products[i]) %>" class="add-to-cart <%= products[i].price %>"><h2><%- products[i].product_name %></h2></a>
            <% if(products[i].discount > 0) {%>
                    <a href="/addInCart" data-product="<%= JSON.stringify(products[i]) %>" class="add-to-cart <%= products[i].price %>"><p class="product-price"><s><i>Rs <%- products[i].price %></s> </i>Rs <%- products[i].discount %></p></a>
            <% } else {%> 
                    <a href="/addInCart" data-product="<%= JSON.stringify(products[i]) %>" class="add-to-cart <%= products[i].price %>"><p class="product-price">Rs <%- products[i].price %></p></a>
            <% } %>
        </div>
         <% } %>
    </section>
    <%- include('footer'); -%>
</body>
</html>