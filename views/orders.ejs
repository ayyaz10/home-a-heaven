<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel=icon href="assets/favicon.png">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,600;0,700;1,200&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">
    <link rel="stylesheet" href="css/orders.css">
    <script src="js/orders.js" defer></script>
    <script src="js/header.js" defer></script>
    <title>Products</title>
</head>
<body>
<%- include('header'); -%>
<div class="content-container">
<div class="content-section">
    <section class="left-panel">
        <h2>Manage My Account</h2>
        <li><a href="/account">My Profile</a></li>
        <li><a href="/orders">My Orders</a></li>
        <!-- <li><a href="#">Address Book</a></li> -->
    </section>
    <section class="orders-container">
        <h1>Your Orders</h1>
        <div class="success-alert">
        </div>
             <!-- <p class="success">Ordered Placed</p> -->
            <table class="table">
                <thead>
                    <tr>
                        <th class="th">Orders</th>
                        <th class="th">Item</th>
                        <!-- <th>Address</th> -->
                        <th class="th">Quantity</th>
                        <th class="th">Price</th>
                        <th class="th">Time</th>
                    </tr>
                </thead>
                <tbody>
                <%  if(customerOrdersItems.length) { %> 
                    <% customerOrdersItems.forEach(order => { %>
                        <tr>
                            <td>
                                <a href="#"><%= order.item_id %></a>
                            </td>

                            <td>
                                <%= order.item_name %>
                            </td>

                            <td>
                                <%= order.qty %>
                            </td>
                            <td>
                                <%= order.price %>
                            </td>
                            <td class="time">
                                <%= moment(order.created_at).format('h:mm:ss a, Do MMMM YYYY') %>
                            </td>
                        </tr>
                    <% }) %> 
                <% } else {%>
                    <tr>
                        <td>No Orders</td>
                    </tr>
                <% } %>
                </tbody>
            </table>
    </section>
</div>
</div>
    <%- include('footer'); -%>
</body>
</html>