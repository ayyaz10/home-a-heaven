    <script src="js/index.js" defer></script>
    <script src="js/header.js" defer></script>
    <title>Home a Heaven</title>
</head>
<body>
    <%- include('header'); -%>
    <section class="hero-section">
      <div class="hero-image">
          <h1>Make Your Home A Heaven</h1>
          <div class="button">
              <a href="/products" class="hero-button">Shop Now</a>
          </div>
      </div>
      <div class="categories-section">
        <h1>Categories</h1>
        <div class="categories-section-row">
          <div class="category cat1">
              <img src="assets/homepage-categories.png"  alt="">
