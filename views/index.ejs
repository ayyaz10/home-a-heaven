          <div class="category cat2">
              <img src="assets/homepage-categories.png"  alt="">
          </div>
          <div class="category cat3">
              <img src="assets/homepage-categories.png"  alt="">
          </div>
          <div class="category cat4">
              <img src="assets/homepage-categories.png"  alt="">
          </div>
          <div class="category cat5">
              <img src="assets/homepage-categories.png"  alt="">
          </div>
          <div class="category cat6">
              <img src="assets/homepage-categories.png"  alt="">
          </div>
      </div>
      </div>
  </section>
  <section class="new-arrivals-section">
      <h1>New Arrivals</h1>
      <div class="new-arrivals-section-row">
          <!-- <% for(let i = 0; i < 6; i++) { %> -->
            <div class="product">
                <a href="/cart"><img src=<%- `assets/${products[i].image}` %> class="product-image" alt="product"></a>
                <a href="/cart"><h2><%- products[i].product_name %></h2></a>
                <a href="/cart"><p><%- products[i].price %></p></a>
            </div>
         <!-- <% } %> -->
      </div>
  </section>
  <%- include('footer'); -%>
